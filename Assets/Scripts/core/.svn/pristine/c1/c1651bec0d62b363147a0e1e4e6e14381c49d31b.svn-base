using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Assets.Scheme.Traits.BaseTraits
{
  /// <summary>
  /// Represents a float
  /// </summary>
  [Serializable]
  public class FloatTrait : Trait
  {
    /// <summary>
    /// Amount based on Json File
    /// </summary>
    public float Amount;
    /// <summary>
    /// Initializes Amount
    /// </summary>
    /// <param name="Amount">Amount to set</param>
    public FloatTrait(float Amount)
    {
      this.Amount = Amount;
    }
  }
}
